<?xml version="1.0" encoding="UTF-8"?>
<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="ehcache.xsd" updateCheck="true"
    monitoring="autodetect" dynamicConfig="true">

    <defaultCache eternal="false" timeToLiveSeconds="30"
		memoryStoreEvictionPolicy="LRU" statistics="true" maxElementsInMemory="10000"
		overflowToDisk="false" />
	<cache name="user" maxEntriesLocalHeap="10000" eternal="false"
		timeToIdleSeconds="20" timeToLiveSeconds="20" memoryStoreEvictionPolicy="LRU"
		statistics="true">
	</cache>
</ehcache>